<h1 class=" ui center aligned header">Welcome to MessageMe - <em>a complete chat app</em></h1>
<h2 class="ui center aligned large icon header">
  <i class="circular red bomb icon"></i>
  Log in to continue
</h2>
<div class="ui placeholder segment" id="loginBox">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_with(scope: :session, url: login_path, class: "ui form", role:"form", local: true) do |f| %>
          <div class="field">
            <%=f.label :username,"Username"%>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder:"Username"%>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%=f.label :password,"Password"%>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder:"Password"%>
              <i class="user icon"></i>
            </div>
          </div>
          <%= f.button "Login", class: "ui red submit button"%>
        <%end%>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big  red button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
